<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @list.name %></h1>

        <ul class="list-group mb-3">
        <% @bookmarks.each do |bookmark| %>
          <li class="list-group-item">
            <%= bookmark.movie.title %><br>
            <%= bookmark.movie.overview %><br>
            <%= bookmark.movie.rating %><br>
            <%= bookmark.comment %><br>

            <%= link_to 'Delete',
              delete_bookmarks_path(bookmark),
              data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this movie?' },
              class: 'btn btn-primary'
            %>
          </li>
        <% end %>
      </ul>

      <%= link_to "Add a movie", add_bookmarks_path(@list), class: 'btn btn-primary' %>


    </div>
  </div>
</div>

